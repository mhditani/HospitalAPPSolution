@page
@model HospitalAPP.Pages.Patients.ListModel
@{
}

<h1 class="mb-3">List of Patients</h1>
@if (Model.Patients != null && Model.Patients.Any())
{
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>PhoneNumber</th>
            <th>InsuranceId</th>
            <th>PhysicianId</th>


        </tr>
        <tbody>
            @foreach (var patient in Model.Patients)
            {
                <tr>
                    <td>@patient.Id</td>
                    <td>@patient.Name</td>

                    <td>@patient.Address</td>
                    <td>@patient.PhoneNumber</td>

                    <td>@patient.InsuranceId</td>
                    <td>@patient.PhysicianId</td>


                    <td>
                        <a href="/Patients/Edit/@patient.Id" class="btn btn-dark">Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Patients Found!</p>
}