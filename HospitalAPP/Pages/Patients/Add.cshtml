@page
@model HospitalAPP.Pages.Patients.AddModel
@{
    var message = ViewData["Message"]?.ToString();
}

<form method="post">
    <h1 class="mb-3">Add New Patient</h1>

    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">
            @message
        </div>
    }

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="AddPatient.Name" />
    </div>

    <div class="mb-3">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="AddPatient.Address" />
    </div>

    <div class="mb-3">
        <label class="form-label">Phone Number</label>
        <input type="text" class="form-control" asp-for="AddPatient.PhoneNumber" />
    </div>

    <div class="mb-3">
        <label class="form-label">Insurance Id</label>
        <input type="number" class="form-control" asp-for="AddPatient.InsuranceId" />
    </div>

    <div class="mb-3">
        <label class="form-label">Physician Id</label>
        <input type="number" class="form-control" asp-for="AddPatient.PhysicianId" />
    </div>


    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>