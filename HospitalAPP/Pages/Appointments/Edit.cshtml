@page "{id:int}"
@model HospitalAPP.Pages.Appointments.EditModel
@{
    var message = ViewData["Message"]?.ToString();
}

<form method="post">
    <h1 class="mb-3">Edit Appointments</h1>
    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">
            @message
        </div>
    }

    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="number" class="form-control" asp-for="EditAppointment.Id" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Patient Id</label>
        <input type="number" class="form-control" asp-for="EditAppointment.PatientId"  />
    </div>

    <div class="mb-3">
        <label class="form-label">Nurse Id</label>
        <input type="number" class="form-control" asp-for="EditAppointment.NurseId" />
    </div>



    <div class="mb-3">
        <label class="form-label">Physician Id</label>
        <input type="number" class="form-control" asp-for="EditAppointment.PhysicianId" />
    </div>

    <div class="mb-3">
        <label class="form-label">Start Date</label>
        <input type="date" class="form-control" asp-for="EditAppointment.StartDate" />
    </div>

    <div class="mb-3">
        <label class="form-label">End Date</label>
        <input type="date" class="form-control" asp-for="EditAppointment.EndDate" />
    </div>

    <div class="mb-3">
        <label class="form-label">Examination Room</label>
        <input type="number" class="form-control" asp-for="EditAppointment.ExaminationRoom" />
    </div>


    <div class="mb-3 d-flex justify-content-between">
        <button type="submit" class="btn btn-primary" asp-page-handler="Edit">
            Edit
        </button>

        <button type="submit" class="btn btn-danger" asp-page-handler="Delete">
            Delete
        </button>
    </div>
</form>