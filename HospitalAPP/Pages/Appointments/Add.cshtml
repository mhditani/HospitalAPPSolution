@page
@model HospitalAPP.Pages.Appointments.AddModel
@{
    var message = ViewData["Message"]?.ToString();
}

<form method="post">
    <h1 class="mb-3">Add New Appointment</h1>

    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">
            @message
        </div>
    }

    <div class="mb-3">
        <label class="form-label">Patient Id</label>
        <input type="number" class="form-control" asp-for="AddAppointment.PatientId" />
    </div>

    <div class="mb-3">
        <label class="form-label">Nurse Id</label>
        <input type="number" class="form-control" asp-for="AddAppointment.NurseId" />
    </div>

    <div class="mb-3">
        <label class="form-label">Physician Id</label>
        <input type="number" class="form-control" asp-for="AddAppointment.PhysicianId" />
    </div>

    <div class="mb-3">
        <label class="form-label">Start Date</label>
        <input type="date" class="form-control" asp-for="AddAppointment.StartDate" />
    </div>

    <div class="mb-3">
        <label class="form-label">End Date</label>
        <input type="date" class="form-control" asp-for="AddAppointment.EndDate" />
    </div>


    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>