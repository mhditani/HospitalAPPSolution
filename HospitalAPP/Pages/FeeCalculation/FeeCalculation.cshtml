@page
@model HospitalAPP.Pages.FeeCalculation.FeeCalculationModel
@{
}



<h1>Fee Calculation</h1>

<form method="post">
    <div class="form-group">
        <label for="roomPrice">Room Price Per Day:</label>
        <input type="number" id="roomPrice" name="roomPrice" step="0.01" asp-for="FeeModel.RoomPricePerDay" />
        <span asp-validation-for="FeeModel.RoomPricePerDay" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="medicinePrice">Medicine Price:</label>
        <input type="number" id="medicinePrice" name="medicinePrice" step="0.01" asp-for="FeeModel.MedicinePrice" />
        <span asp-validation-for="FeeModel.MedicinePrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="procedurePrice">Procedure Price:</label>
        <input type="number" id="procedurePrice" name="procedurePrice" step="0.01" asp-for="FeeModel.ProcedurePrice" />
        <span asp-validation-for="FeeModel.ProcedurePrice" class="text-danger"></span>
    </div>
    <button type="submit">Calculate Total Cost</button>
</form>

<div>
    @if (Model.FeeModel.TotalCost > 0)
    {
        <div>Total Cost: @Model.FeeModel.TotalCost.ToString("0.00")</div>
    }
</div>
