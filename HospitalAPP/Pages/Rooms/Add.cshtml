@page
@model HospitalAPP.Pages.Rooms.AddModel
@{
    var message = ViewData["Message"]?.ToString();
}


<form method="post">
    <h1 class="mb-3">Add A Room</h1>

    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">
            @message
        </div>
    }

    <div class="mb-3">
        <label class="form-label">Room Type</label>
        <input type="text" class="form-control" asp-for="AddRoom.RoomType" />
    </div>

    <div class="mb-3">
        <label class="form-label">Available Room</label>
        <input type="checkbox" class="form-check-input" asp-for="AddRoom.Unvailable" />
    </div>

 



    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>