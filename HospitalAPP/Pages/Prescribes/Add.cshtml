@page
@model HospitalAPP.Pages.Prescribes.AddModel
@{
    var message = ViewData["Message"]?.ToString();
}

<style>
    body {
        background-color: lightblue
    }
</style>

<form method="post">
    <h1 class="mb-3">Add  A New Prescription</h1>

    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">
            @message
        </div>
    }

    <div class="mb-3">
        <label class="form-label">Physician Id</label>
        <input type="number" class="form-control" asp-for="AddPrescribe.PhysicianId" />
    </div>

    <div class="mb-3">
        <label class="form-label">Patient Id</label>
        <input type="number" class="form-control" asp-for="AddPrescribe.PatientId" />
    </div>

    <div class="mb-3">
        <label class="form-label">Medication Id</label>
        <input type="number" class="form-control" asp-for="AddPrescribe.MedicationId" />
    </div>

    <div class="mb-3">
        <label class="form-label">Medication Time</label>
        <input type="date" class="form-control" asp-for="AddPrescribe.MedicationId" />
    </div>

    <div class="mb-3">
        <label class="form-label">Appointment Id</label>
        <input type="number" class="form-control" asp-for="AddPrescribe.AppointemntId" />
    </div>
    <div class="mb-3">
        <label class="form-label">Dose</label>
        <input type="text" class="form-control" asp-for="AddPrescribe.Dose" />
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>