@page "{id:int}"
@model HospitalAPP.Pages.Prescribes.EditModel
@{
    var message = ViewData["Message"]?.ToString();
}

<form method="post">
    <h1 class="mb-3">Edit Prescriptions</h1>
    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">
            @message
        </div>
    }

    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="number" class="form-control" asp-for="EditPrescribe.Id" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Physician Id</label>
        <input type="number" class="form-control" asp-for="EditPrescribe.PhysicianId" />
    </div>

    <div class="mb-3">
        <label class="form-label">Patient Id</label>
        <input type="number" class="form-control" asp-for="EditPrescribe.PatientId" />
    </div>


    <div class="mb-3">
        <label class="form-label">Medication Id</label>
        <input type="number" class="form-control" asp-for="EditPrescribe.MedicationId" />
    </div>

    <div class="mb-3">
        <label class="form-label">Medication Time</label>
        <input type="date" class="form-control" asp-for="EditPrescribe.MedicationTime" />
    </div>

    <div class="mb-3">
        <label class="form-label">Appointment Id</label>
        <input type="number" class="form-control" asp-for="EditPrescribe.AppointemntId" />
    </div>


    <div class="mb-3">
        <label class="form-label">Dose</label>
        <input type="text" class="form-control" asp-for="EditPrescribe.Dose" />
    </div>

    <div class="mb-3 d-flex justify-content-between">
        <button type="submit" class="btn btn-primary" asp-page-handler="Edit">
            Edit
        </button>

        <button type="submit" class="btn btn-danger" asp-page-handler="Delete">
            Delete
        </button>
    </div>
</form>