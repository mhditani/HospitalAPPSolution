@page "{id:int}"
@model HospitalAPP.Pages.Physicians.EditModel
@{
    var message = ViewData["Message"]?.ToString();
}


<form method="post">
    <h1 class="mb-3">Edit Physicians</h1>
    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">
            @message
        </div>
    }

    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="EditPhysician.Id" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="EditPhysician.Name" />
    </div>

    <div class="mb-3">
        <label class="form-label">Social Security Number</label>
        <input type="text" class="form-control" asp-for="EditPhysician.SSN" />
    </div>

    <div class="mb-3">
        <label class="form-label">Date Of Birth</label>
        <input type="text" class="form-control" asp-for="EditPhysician.DateOfBirth" />
    </div>

    <div class="mb-3 d-flex justify-content-between">
        <button type="submit" class="btn btn-primary" asp-page-handler="Edit">
            Edit
        </button>

        <button type="submit" class="btn btn-danger" asp-page-handler="Delete">
            Delete
        </button>
    </div>
</form>
